<div id="table_profile">
	<%= form_for @user, :url => updatePassword_path() do |f| %>
	<%= render 'shared/error_msg', :obj => current_user %>
	<h2>Change your password, <%= current_user.username %></h2>
	<table>
		<tr>
			<td><h4><%= f.label "Old password" %></h4></td>
			<td><%= f.password_field :password_old %></td>
		</tr>
		<tr>
			<td><h4><%= f.label "New Password" %></h4></td>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<td><h4><%= f.label :password_confirmation, "Confirmation" %></h4></td>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
	</table>
	<div class="actions">
    	<%= f.submit "Save Passwort" %>
  	</div>
	<% end %>
</div>